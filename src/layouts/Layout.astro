---
import { CONTENT_TYPES } from "../constants";

import "../styles/index.css";

type Props = { title: string; campaignSlug?: string; campaignName?: string };
const { title, campaignSlug, campaignName } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Grenze+Gotisch&family=Playfair+Display&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header>
      <span>{campaignName || title}</span>
      {
        campaignSlug && (
          <nav>
            {CONTENT_TYPES.map((type) => (
              <a href={`/${campaignSlug}/${type}`}>{type}</a>
            ))}
          </nav>
        )
      }
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
